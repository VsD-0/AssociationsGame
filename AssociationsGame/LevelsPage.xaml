<Page x:Class="AssociationsGame.LevelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssociationsGame"
      xmlns:materialDesign = "http://materialdesigninxaml.net/winfx/xaml/themes" 
      TextElement.Foreground = "{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight = "Medium" 
      TextElement.FontSize = "14"
      FontFamily = "{materialDesign:MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignWidth="800" d:DesignHeight="515"
      Title="LevelsPage">

    <Grid>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Hidden" VerticalAlignment="Stretch"
                      Style="{StaticResource MaterialDesignScrollViewer}" HorizontalAlignment="Center" Margin="70">
            <StackPanel VerticalAlignment="Center" Width="200">
                <Button 
                        Height="50" Content="1 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="2 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="3 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="4 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="5 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="6 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
                <Button 
                        Height="50" Content="7 Уровень" Margin="0,0,0,10"
                        FontFamily="\Resourse\Font\#Comic Helvetic" FontSize="25"
                        Cursor="Hand" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" Click="Button_Click">
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
